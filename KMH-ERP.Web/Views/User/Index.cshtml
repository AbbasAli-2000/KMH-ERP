@model UserViewModel


<div class="container mt-4">
    <!-- Breadcrumb outside card -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-light rounded-3 px-3 py-2 mb-3">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">User</li>
        </ol>
    </nav>

    <div class="card border-top border-primary shadow-sm">
        <div class="card-header bg-light fw-bold d-flex justify-content-between align-items-center">
            <span>User</span>
            <a class="btn btn-primary btn-sm d-flex align-items-center" href="@Url.Action("AddEditUser", "User")">
                <i class="bi bi-plus-circle me-1"></i> Add User
            </a>
        </div>

        <div class="card-body p-3">
            @if (Model.UserList == null || !Model.UserList.Any())
            {
                <div class="alert alert-info text-center mb-0">
                    No users found. Click <strong>Add User</strong> to create a new user.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table id="userTable" class="table table-hover table-borderless align-middle mb-0">
                        <thead class="table-primary text-center">
                            <tr>
                                <th>UserName</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Active</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var u in Model.UserList)
                            {
                                <tr>
                                    <td>@u.UserName</td>
                                    <td>@u.Email</td>
                                    <td>@u.RoleName</td>
                                    <td class="text-center">
                                        @if (u.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a class="btn btn-warning btn-sm btn-icon me-1" href="@Url.Action("AddEditUser", "User", new { id = EncryptionHelper.Encrypt(u.UserId.ToString()) })" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a class="btn btn-danger btn-sm btn-icon" href="@Url.Action("Delete", "User", new { id = u.UserId })"
                                           onclick="return confirm('Are you sure?');" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>