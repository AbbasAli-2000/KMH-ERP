<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KMH_ERP.Web</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KMH_ERP.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        /* Body & Layout */
        html, body {
            height: 100%;
            margin: 0;
            font-family: "Segoe UI", sans-serif;
            background-color: #f8f9fa; /* light gray background */
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .wrapper {
            display: flex;
            flex: 1;
        }

        /* Sidebar */
        #sidebar {
            min-width: 220px;
            max-width: 220px;
            background: #343a40; /* dark gray */
            color: #fff;
            transition: all 0.3s;
        }

            #sidebar.active {
                min-width: 70px;
                max-width: 70px;
            }

            #sidebar .nav-link {
                color: #e9ecef;
                display: flex;
                align-items: center;
                padding: 0.6rem 1rem;
                font-size: 0.95rem;
            }

                #sidebar .nav-link i {
                    width: 25px;
                    font-size: 1.2rem;
                }

                #sidebar .nav-link:hover {
                    background-color: #495057;
                    text-decoration: none;
                }

            #sidebar.active .nav-link span {
                display: none;
            }

            #sidebar .submenu {
                padding-left: 1.5rem;
            }

        /* Content */
        #content {
            flex: 1;
            padding: 20px;
            background-color: #f1f3f5; /* subtle content background */
            transition: margin-left 0.3s;
            min-height: calc(100vh - 56px - 40px);
        }

        /* Navbar */
        .navbar-user {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .navbar-user img {
                width: 35px;
                height: 35px;
                border-radius: 50%;
            }

        /* Footer */
        footer {
            background-color: #fff;
            padding: 10px 0;
            text-align: center;
            font-size: 0.9rem;
            color: #6c757d;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            #sidebar

        {
            min-width: 0;
            max-width: 0;
        }

        #sidebar.active {
            min-width: 220px;
            max-width: 220px;
        }

        }
    </style>
</head>
<body>
    <!-- Header / Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container-fluid">
                <button class="btn btn-outline-secondary me-2" id="sidebarToggle">☰</button>
                <a class="navbar-brand me-auto" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logokmh.png" alt="KMH Logo" height="35" />
                </a>
                <div class="navbar-user">
                    <img src="https://i.pravatar.cc/35" alt="User Avatar" />
                    <span>Demo User</span>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger btn-sm">Logout</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <!-- Sidebar + Content -->
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar">
            <ul class="nav flex-column pt-3">
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="bi bi-speedometer2"></i> <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="collapse" href="#masterMenu" role="button" aria-expanded="false" aria-controls="masterMenu">
                        <i class="bi bi-folder"></i> <span>Master Menu</span>
                    </a>
                    <div class="collapse" id="masterMenu">
                        <ul class="nav flex-column submenu">
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="collapse" href="#userManagement" role="button" aria-expanded="false" aria-controls="userManagement">
                                    <i class="bi bi-people"></i> <span>User Management</span>
                                </a>
                                <div class="collapse" id="userManagement">
                                    <ul class="nav flex-column submenu">
                                        <li class="nav-item">
                                            <a class="nav-link" asp-controller="User" asp-action="Index">
                                                <i class="bi bi-person"></i> <span>User</span>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" asp-controller="Role" asp-action="Index">
                                                <i class="bi bi-shield-lock"></i> <span>Role</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </div>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div id="content">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer class="border-top">
        &copy; 2025 - KMH_ERP.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $('#sidebarToggle').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
