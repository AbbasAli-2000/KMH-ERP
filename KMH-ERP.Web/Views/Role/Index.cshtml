@model RoleViewModel

<div class="container mt-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-white shadow-sm rounded-3 px-3 py-2 mb-4">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-primary fw-semibold">
                    <i class="bi bi-house-door"></i> Home
                </a>
            </li>
            <li class="breadcrumb-item active fw-semibold text-dark" aria-current="page">
                Roles
            </li>
        </ol>
    </nav>

    <!-- Alerts -->
    <partial name="_Alert" model="Model" />

    <div class="row g-4">
        <!-- Add Role Card -->
        <div class="col-md-3 col-sm-6">
            <a href="@Url.Action("AddRole", "Role")" class="text-decoration-none">
                <div class="card h-100 border-0 shadow-sm role-card text-center d-flex align-items-center justify-content-center bg-light hover-scale">
                    <i class="bi bi-plus-circle display-3 text-primary mb-2"></i>
                    <h5 class="fw-semibold text-primary">Add Role</h5>
                </div>
            </a>
        </div>

        <!-- Role Cards -->
        @foreach (var role in Model.RoleList)
        {
            <div class="col-md-3 col-sm-6">
                <div class="card h-100 border-0 shadow-sm role-card hover-shadow">
                    <div class="card-body text-center d-flex flex-column align-items-center">
                        <div class="icon-circle bg-gradient-primary text-white mb-3">
                            <i class="bi bi-shield-lock-fill fs-2"></i>
                        </div>
                        <h5 class="fw-bold text-dark">@role.RoleName</h5>

                        @if (!string.IsNullOrEmpty(role.Description))
                        {
                            <p class="text-muted small mb-2">@role.Description</p>
                        }
                        <span class="badge rounded-pill @(role.IsActive ? "bg-success" : "bg-se condary") mb-3 px-3 py-1">
                            @(role.IsActive ? "Active" : "Inactive")
                        </span>

                        <a href="@Url.Action("AddRole", "Role", new { id = EncryptionHelper.Encrypt(role.RoleId.ToString()) })"
                           class="btn btn-outline-warning btn-sm rounded-pill px-3">
                            <i class="bi bi-pencil me-1"></i> Edit
                        </a>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Extra CSS -->
<style>
    .hover-shadow:hover {
        transform: translateY(-4px);
        transition: 0.3s;
        box-shadow: 0 6px 18px rgba(0,0,0,0.12) !important;
    }

    .hover-scale:hover {
        transform: scale(1.05);
        transition: 0.3s;
    }

    .icon-circle {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .bg-gradient-primary {
        background: linear-gradient(135deg, #007bff 0%, #6610f2 100%);
    }
</style>
